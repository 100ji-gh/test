parameters:
  level: 6
  treatPhpDocTypesAsCertain: false

  # ★ 解析対象を限定（stubやtests等は含めない）
  paths:
    - test-plugin.php
    - includes

  # ★ WP最小スタブを読み込む（解析対象にはしない）
  stubFiles:
    - tools/.phpstan-wp-min-stubs.php

  # 念のため tools 配下も除外（stubFiles には影響しません）
  excludePaths:
    analyse:
      - vendor/*
      - tests/*
      - tmp/*
      - .github/*
      - wp-content/*
      - tools/*
