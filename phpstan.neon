parameters:
  level: 6
  treatPhpDocTypesAsCertain: false

  # 解析対象は最小限に限定（tests や tools は含めない）
  paths:
    - test-plugin.php
    - includes

  # ★ WordPress最小スタブを確実に読ませる
  stubFiles:
    - ./tools/.phpstan-wp-min-stubs.php
  scanFiles:
    - ./tools/.phpstan-wp-min-stubs.php

  excludePaths:
    analyse:
      - vendor/*
      - tests/*
      - tmp/*
      - .github/*
      - wp-content/*
      - tools/*       # ← 解析はしない（上で scanFiles だけ行う）
