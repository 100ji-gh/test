parameters:
  level: 6
  treatPhpDocTypesAsCertain: false

  paths:
    - includes
    - test-plugin.php

  stubFiles:
    - .phpstan-wp-min-stubs.php
  bootstrapFiles:
    - .phpstan-wp-min-stubs.php
  scanFiles:
    - .phpstan-wp-min-stubs.php

  excludePaths:
    analyse:
      - vendor/*
      - tests/*
      - tests/wordpress/*
      - tmp/*
      - .github/*
      - node_modules/*
      - wordpress/*
      - wp-content/*
